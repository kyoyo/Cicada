!!!5
html
	head
		meta(charset='utf-8')
		title 用户登录
		link(type='text/css',href="/static/css/bootstrap.min.css",rel='stylesheet')
		style
			#login{
				width:400px;
				margin:200px auto;
			}
	body
		div#login
			form(method='post',action='')
				table
					tr
						th 用户名：
						td {{ form.username }}
					tr
						th 密码：
						td {{ form.password }}
					tr
						th {% csrf_token %}
							input(type='hidden',name='next',value='/')
						td
							input.btn.btn-primary(type='submit',value='登录')